<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ringeliste" default="compile.module.ringeliste">
  <dirname property="module.ringeliste.basedir" file="${ant.file.module_ringeliste}"/>
  
  <property name="module.jdk.home.ringeliste" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ringeliste" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ringeliste" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ringeliste" value="-encoding windows-1252 -source 8 ${compiler.args}"/>
  
  <property name="ringeliste.output.dir" value="${module.ringeliste.basedir}/out/production/ringeliste"/>
  <property name="ringeliste.testoutput.dir" value="${module.ringeliste.basedir}/out/test/ringeliste"/>
  
  <path id="ringeliste.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ringeliste.module.production.classpath">
    <path refid="${module.jdk.classpath.ringeliste}"/>
    <pathelement location="${basedir}/../jexcelapi/jxl.jar"/>
  </path>
  
  <path id="ringeliste.runtime.production.module.classpath">
    <pathelement location="${ringeliste.output.dir}"/>
    <pathelement location="${basedir}/../jexcelapi/jxl.jar"/>
  </path>
  
  <path id="ringeliste.module.classpath">
    <path refid="${module.jdk.classpath.ringeliste}"/>
    <pathelement location="${ringeliste.output.dir}"/>
    <pathelement location="${basedir}/../jexcelapi/jxl.jar"/>
  </path>
  
  <path id="ringeliste.runtime.module.classpath">
    <pathelement location="${ringeliste.testoutput.dir}"/>
    <pathelement location="${ringeliste.output.dir}"/>
    <pathelement location="${basedir}/../jexcelapi/jxl.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.ringeliste">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ringeliste">
    <patternset refid="excluded.from.module.ringeliste"/>
  </patternset>
  
  <path id="ringeliste.module.sourcepath">
    <dirset dir="${module.ringeliste.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ringeliste" depends="compile.module.ringeliste.production,compile.module.ringeliste.tests" description="Compile module ringeliste"/>
  
  <target name="compile.module.ringeliste.production" depends="register.custom.compilers" description="Compile module ringeliste; production classes">
    <mkdir dir="${ringeliste.output.dir}"/>
    <javac2 destdir="${ringeliste.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ringeliste}/javac">
      <compilerarg line="${compiler.args.ringeliste}"/>
      <bootclasspath refid="ringeliste.module.bootclasspath"/>
      <classpath refid="ringeliste.module.production.classpath"/>
      <src refid="ringeliste.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ringeliste"/>
    </javac2>
    
    <copy todir="${ringeliste.output.dir}">
      <fileset dir="${module.ringeliste.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ringeliste.tests" depends="register.custom.compilers,compile.module.ringeliste.production" description="compile module ringeliste; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ringeliste" description="cleanup module">
    <delete dir="${ringeliste.output.dir}"/>
    <delete dir="${ringeliste.testoutput.dir}"/>
  </target>
</project>